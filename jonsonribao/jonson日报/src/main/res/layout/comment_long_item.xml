<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_longcommenter_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/comment_avatar"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingTop="8dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_longcommenter_name"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jonson"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    />
                <TextView
                    android:id="@+id/tv_longcommenter_parise_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="0"
                    android:textSize="13sp"
                    android:drawableLeft="@mipmap/comment_vote"
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"
                    android:layout_marginRight="10dp"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_longcomment_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="其实一开始我是拒绝的其实一开始我是拒绝的其实一开始我是拒绝的其实一开始我是拒绝的其实一开始我是拒绝的其实一开始我是拒绝的其实一开始我是拒绝的其实一开始我是拒绝的其实一开始我是拒绝的"
                android:textSize="16sp"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/tv_comment_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="XXX:短评回复"
                android:textSize="15sp"
                android:visibility="visible"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>