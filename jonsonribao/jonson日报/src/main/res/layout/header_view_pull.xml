<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="#fafafa"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_pull_arrow"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/refresh_arrow"
            android:visibility="visible"
            android:layout_centerVertical="true"
            />
        <ProgressBar
            android:id="@+id/pb_refresh_arrow"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:indeterminateDrawable="@drawable/progress_refresh"
            android:layout_centerVertical="true"
            android:indeterminateDuration="250"
            android:visibility="gone"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_pull_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下拉刷新"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        />
</LinearLayout>