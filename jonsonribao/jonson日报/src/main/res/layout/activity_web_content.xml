<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >
    <com.jonson.jonsonribao.view.MyScrollView
        android:id="@+id/sl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/iv_webview_header"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:scaleType="centerCrop"
                />
            <WebView
                android:id="@+id/wv_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </WebView>
        </LinearLayout>
    </com.jonson.jonsonribao.view.MyScrollView>

    <RelativeLayout
        android:id="@+id/rl_web_view_titlebar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#00A2ED"
        android:visibility="visible"
        >
        <ImageButton
            android:id="@+id/iv_webView_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/back"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_praise_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:textSize="15sp"
            android:textColor="#eeffffff"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/iv_praise"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@mipmap/praise"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_praise_count"
            />
        <TextView
            android:id="@+id/tv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:textColor="#eeffffff"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_praise"
            android:layout_marginRight="15dp"
            />
        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@mipmap/comment"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_comment_count"
            />
        <ImageView
            android:id="@+id/iv_collect"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@mipmap/collect"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_comment"
            android:layout_marginRight="12dp"
            />
        <ImageView
            android:id="@+id/iv_shared"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@mipmap/share"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_collect"
            android:layout_marginRight="12dp"
            />

    </RelativeLayout>


</RelativeLayout>
